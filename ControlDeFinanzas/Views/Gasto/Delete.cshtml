@model ControlDeFinanzas.Models.Gasto

@{
    ViewData["Title"] = "Delete";
}

<!-- Estilos en línea para el modo oscuro -->
<style>
    body {
        background-image: linear-gradient(to right, #434343 0%, black 100%);
        color: white;
    }

    h1 {
        padding-top: 8rem;
        align-items: center;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }
</style>

<h1>Eliminar Gasto</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>¿Está seguro de que desea eliminar este gasto?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Monto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Monto)</dd>

                <dt class="col-sm-4">Fecha</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-4">Categoría</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Categoria)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-4">
                    <input type="submit" value="Eliminar" class="btn btn-outline-danger w-100" />
                </div>
            </form>

            <div class="text-center mt-4">
                <a class="btn btn-outline-secondary" asp-action="Index">Volver a gastos</a>
            </div>
        </div>
    </div>
</div>
